# ==========================================
# Multi_Base 交易系統設定範本 (Example)
# 使用方式: 複製此檔案並重新命名為 config.yaml
# ==========================================

# ------------------------------------------
# 1. 交易所配置 (必填)
# ------------------------------------------
exchange:
  # 當前啟動的交易所名稱 (對應下方定義的 Key，支援不分大小寫)
  active: "binance"
  
  # 幣安交易所設定
  binance:
    type: "ccxt"                  # 交易所類型: "ccxt", "custom", "dex"
    apiKey: "YOUR_API_KEY"        # 填入您的 API Key
    secret: "YOUR_API_SECRET"     # 填入您的 API Secret
    options: 
      defaultType: "future"       # "future": 合約, "spot": 現貨

  # Bybit 交易所設定
  bybit:
    type: "ccxt"
    apiKey: "YOUR_API_KEY"
    secret: "YOUR_API_SECRET"
    options: 
      defaultType: "swap"         # "swap": 永續合約

# ------------------------------------------
# 2. 策略配置 (選配 - 自主指標交易模式 或 訊號策略參數)
# ------------------------------------------
strategy:
  enabled: true                   # 是否啟用主動策略模式，true 為啟用，false 為停用
  active: "AdTrack"               # 執行的策略名稱 (例如: "AdTrack", "demo_ma_crossover")
  
  # 策略參數設定
  params:
    # 下單模式設定: 
    # - "USDT": 以固定美金價值計算下單量 (公式: USDT / 市價 = 顆數)
    # - "UNITS": 以固定代幣顆數下單
    investment_mode: "USDT"       
    
    # 下單數值:
    # 搭配 investment_mode 使用 (例如 mode="USDT" 且 value=100.0 代表每單投 100 鎂)
    investment_value: 100.0       

# ------------------------------------------
# 3. 外部訊號跟單模式 (選配 - Telegram/TradingView)
# ------------------------------------------
signals:
  enabled: false                  # 是否啟用外部訊號監控，true 為啟用，false 為停用
  
  # Telegram 用戶端基礎設定 (當 sources 中有類型為 telegram 時必填)
  # 請至 https://my.telegram.org 申請 API_ID 與 API_HASH
  telegram_config:
    api_id: "YOUR_API_ID"         # 填入官方產生的 API ID
    api_hash: "YOUR_API_HASH"     # 填入官方產生的 API HASH
    session_name: "trade_bot"     # 您自定義的會話名稱，程式執行後會產生同名的 .session 檔案

  sources:
    - name: "TG_Example_Group"    # 範例 Telegram 頻道
      type: "telegram"
      channel_id: "@your_channel" # 頻道 ID
      parser: "demo_tg_parser"    # 使用的解析器名稱
      
    - name: "TV_Example_Webhook"  # 範例 TradingView Webhook
      type: "webhook"
      port: 8080
      path: "/tv_signals"
      parser: "json_parser"

# ------------------------------------------
# 4. 通知與日誌 (選配 - 訊息推送)
# ------------------------------------------
notifications:
  telegram_bot:
    enabled: false                # 是否啟用交易結果推送，true 為啟用，false 為停用
    token: "YOUR_BOT_TOKEN"       # 機器人 Token
    chat_id: "YOUR_CHAT_ID"       # 您的 Chat ID
