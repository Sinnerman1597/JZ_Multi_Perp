# ------------------------------------------
# Multi_Base 交易系統設定檔
# ------------------------------------------

# 1. 交易所配置 (支援多交易所管理)
exchange:
  active: "bybit"                 # 當前啟用的交易所名稱 (對應下方細節配置)

  # Bybit 交易所設定
  bybit:
    type: "ccxt"
    apiKey: "你的API_KEY"
    secret: "你的SECRET"
    apiKey: "你的_TESTNET_API_KEY" #若非測試網請註解此兩行
    secret: "你的_TESTNET_SECRET"
    sandbox: true                 # 重要：設為 true 則連往 Bybit Testnet (模擬網)
    enableRateLimit: true
    options: 
      defaultType: "swap"         # "swap": 永續合約

# ------------------------------------------
# 2. 策略配置 (選配 - 自主指標交易模式 或 訊號策略參數)
# ------------------------------------------
# 目前可用的策略 (Strategy) 名稱：
# - "AdTrack"             : 您目前的主力策略 (支援 4 階止盈與移動止損)
# - "demo_ma_crossover"   : 範例均線交叉策略
# - "demo_signal_strategy": 範例基礎訊號策略
# ------------------------------------------
strategy:
  enabled: true                   # 是否啟用主動策略模式，true 為啟用，false 為停用
  active: "AdTrack"               # 執行的策略名稱 (例如: "AdTrack", "demo_ma_crossover")
  
  # 策略參數設定
  params:
    # 下單模式設定: 
    # - "USDT": 以固定美金價值計算下單量 (公式: USDT / 市價 = 顆數)
    # - "UNITS": 以固定代幣顆數下單
    investment_mode: "USDT"       
    
    # 下單數值:
    # 搭配 investment_mode 使用 (例如 mode="USDT" 且 value=100.0 代表每單投 100 鎂)
    investment_value: 100.0       

# ------------------------------------------
# 3. 外部訊號跟單模式 (選配 - Telegram/TradingView)
# ------------------------------------------
# 目前可用的解析器 (Parser) 型號：
# - "adtrack_parser" : 專為 AdTrack 格式設計 (包含 Emoji、進場區間、4級階梯止盈)
# - "demo_tg_parser" : 基礎測試用格式
# ------------------------------------------
signals:
  enabled: true                   # 是否啟用外部訊號監控
  
  # Telegram 用戶端基礎設定 (當 sources 中有類型為 telegram 時必填)
  telegram_config:
    api_id: 123456                # 替換為您的 Telegram API_ID
    api_hash: "your_api_hash"      # 替換為您的 Telegram API_HASH
    session_name: "trade_bot"     # .session 檔案名稱 (若已有現成 session 可移植)

  # 訊號來源設定
  sources:
    - name: "AdTrack_Group"       # 來源標籤 (自定義，用於日誌顯示)
      type: "telegram"            # 來源類型: telegram, webhook
      channel_id: "@channel"      # 頻道 Username 或 ID
      parser: "adtrack_parser"    # 使用哪個解析器

# ------------------------------------------
# 4. 通知配置
# ------------------------------------------
notifications:
  telegram:
    enabled: false
    bot_token: "YOUR_BOT_TOKEN"
    chat_id: "YOUR_CHAT_ID"
